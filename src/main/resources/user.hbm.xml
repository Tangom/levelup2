<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="org.levelup.hibernate.domain.User" table="USER">
        <id name="userId" column="USER_ID" type="java.lang.Integer">
            <generator class="identity"/>
        </id>

        <property name="login" column="LOGIN" type="java.lang.String"
                  not-null="true" unique="true" length="10"/>
        <property name="name" column="NAME" type="java.lang.String"
                  not-null="true" length="30"/>
        <property name="lastName" column="LAST_NAME" type="java.lang.String"
                  not-null="true" length="30"/>
    </class>

</hibernate-mapping>